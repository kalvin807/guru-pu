{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 120,
      "proseWrap": "preserve",
      "singleQuote": false,
      "useTabs": false
    }
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-unused-vars"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "tags": [
        "recommended"
      ]
    }
  }
}
